    "definitions": {
        "models.Address": {
            "type": "object",
            "required": [
                "city",
                "country",
                "fullName",
                "postalCode",
                "street",
                "type"
            ],
            "properties": {
                "city": {
                    "type": "string",
                    "example": "Berlin"
                },
                "country": {
                    "type": "string",
                    "example": "Germany"
                },
                "fullName": {
                    "type": "string",
                    "example": "Max Mustermann"
                },
                "isDefault": {
                    "type": "boolean",
                    "example": true
                },
                "postalCode": {
                    "type": "string",
                    "example": "12345"
                },
                "street": {
                    "type": "string",
                    "example": "Musterstraße 123"
                },
                "type": {
                    "type": "string",
                    "example": "shipping"
                }
            }
        },
        "models.User": {
            "type": "object",
            "required": [
                "email"
            ],
            "properties": {
                "email": {
                    "type": "string",
                    "example": "user@example.com"
                },
                "firstName": {
                    "type": "string",
                    "example": "Max"
                },
                "lastName": {
                    "type": "string",
                    "example": "Mustermann"
                },
                "phone": {
                    "type": "string",
                    "example": "+49 123 456789"
                },
                "role": {
                    "type": "string",
                    "example": "user"
                }
            }
        }
    },
    "securityDefinitions": {
        "BearerAuth": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
